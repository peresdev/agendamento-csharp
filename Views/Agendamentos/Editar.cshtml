@model Agendamento

@{
    ViewData["Title"] = "Editar Agendamento";
}

<div class="container">
    <div class="columns">
        <div class="column is-3">
            <aside class="menu">
                <p class="menu-label">
                    Administração
                </p>
                <ul class="menu-list">
                    <li><a asp-controller="Home" asp-action="Index">Totais</a></li>
                    <li><a asp-controller="Usuarios" asp-action="Index">Usuários</a></li>
                    <li><a asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
                    <li><a asp-controller="Medicos" asp-action="Index">Médicos</a></li>
                    <li><a class="is-active" asp-controller="Agendamentos" asp-action="Index">Agendamentos</a></li>
                </ul>
            </aside>
        </div>
        <div class="column is-9">
            <h3 class="title">@ViewData["Title"]</h3>
            <form asp-action="Editar">
                <input type="hidden" asp-for="AgendamentoID" />
                <div class="column">
                    <label>Data</label>
                    <input type="text" asp-for="Data" class="input is-info is-medium" placeholder="Data">
                </div>
                <div class="column">
                    <label>Paciente</label>
                    <div class="select is-fullwidth">
                        <select asp-for="PacienteID" class="form-control" asp-items="ViewBag.PacienteID">
                            <option value="">-- Selecione o Paciente --</option>
                        </select>
                    </div>
                </div>
                <div class="column">
                    <label>Paciente</label>
                    <div class="select is-fullwidth">
                        <select asp-for="MedicoID" class="form-control" asp-items="ViewBag.MedicoID">
                            <option value="">-- Selecione o Médico --</option>
                        </select>
                    </div>
                </div>
                <div class="column">
                    <input type="submit" value="Editar" class="button is-medium is-info" />
                </div>
            </form>
        </div>
    </div>
</div>