@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="columns">
        <div class="column is-3">
            <aside class="menu">
                <p class="menu-label">
                    Administração
                </p>
                <ul class="menu-list">
                    <li><a class="is-active" asp-controller="Home" asp-action="Index">Totais</a></li>
                    <li><a asp-controller="Usuarios" asp-action="Index">Usuários</a></li>
                    <li><a asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
                    <li><a asp-controller="Medicos" asp-action="Index">Médicos</a></li>
                    <li><a asp-controller="Agendamentos" asp-action="Index">Agendamentos</a></li>
                </ul>
            </aside>
        </div>
        <div class="column is-9">
            <section class="hero is-info welcome is-small">
                <div class="hero-body">
                    <div class="container">
                        <h1 class="title">
                            Olá. Bem-vindo ao Sistema de Agendamento
                        </h1>
                    </div>
                </div>
            </section>
            <section class="info-tiles">
                <div class="tile is-ancestor has-text-centered">
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">@ViewBag.PacientesCadastrados</p>
                            <p class="subtitle">Pacientes cadastrados</p>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">@ViewBag.MedicosCadastrados</p>
                            <p class="subtitle">Médicos cadastrados</p>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">@ViewBag.AgendamentosRealizados</p>
                            <p class="subtitle">Agendamentos realizados</p>
                        </article>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>